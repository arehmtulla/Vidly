@model ICollection<Vidly.Models.Movie>
@{
    ViewBag.Title = "AllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table table-hover">
    <tr>
        <th>
            Title
        </th>
        <th>
            Genre
        </th>
    </tr>`

    @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Details", new {id = movie.Id})
                    </td>
                    <td>@movie.Genre</td>
                </tr>

            }
</table>



